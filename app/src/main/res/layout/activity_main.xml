<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bomb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7CC655"
        android:backgroundTint="#D3E6C778"
        android:gravity="right|top|left"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="36dp">

        <LinearLayout
            android:id="@+id/topButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E66565"
            android:gravity="right|top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/timerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_weight="1"
                android:text="1:23"
                android:textSize="30sp" />

            <Button
                android:id="@+id/quitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_weight="1"
                android:paddingStart="20sp"
                android:paddingEnd="20sp"
                android:text="@string/quitButtonText"
                android:textSize="30sp" />

            <Button
                android:id="@+id/placeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_weight="1"
                android:paddingStart="20sp"
                android:paddingEnd="20sp"
                android:textSize="30sp"
                tools:text="Place" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainScreenLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|left|center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.example.strategocs301.MySurfaceView
                    android:id="@+id/mySurfaceView"
                    android:layout_width="800dp"
                    android:layout_height="800dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rightLayout"
                android:layout_width="300sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20sp"
                android:background="#FFFFFF"
                android:backgroundTint="#3EEA7D"
                android:gravity="right|top|left"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button102"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Captured/Pieces" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>